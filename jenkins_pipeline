pipeline {
    agent any

    stages {
        stage('Test') {
            steps {
                // Run Maven on a Unix agent.
                // sh "mvn clean test"
                // To run Maven on a Windows agent, use
                bat "mvn clean test"
            }

            post {
                always {
                    step([$class: 'Publisher', reportFilenamePattern:'**/testng-results.xml'])
                }
            }

        }
    }
}
